WindowManager:
    SplashScreen
    LoginScreen
    HomeScreen
    ProfileScreen
    KBHomeScreen
    DiseaseScreen
    DiseaseImageScreen
    CameraScreen
    DiagnosisResults
    AddSMSClient
    SettingsScreen
    LanguageSettings
    WeatherScreen
<SplashScreen>
    name: "Splash"
    Image:
        source: "sample.png"
        size_hint_y: 0.4
        size_hint_x: .2
        pos_hint: {'center_y': .7, 'center_x': .5}
    MDLabel:
        text: "EagleEye"
        halign: "center"
        theme_text_color: "Custom"
        text_color: "green"
        font_style: "H3"
        pos_hint: {'center_x': 0.5, 'center_y':0.4}
    MDLabel:
        text: "{}".format(root.state)
        halign: "center"
        pos_hint: {'center_x': 0.5, 'center_y':0.1}
<LoginScreen>
    name: "LoginScreen"
    padding: "10dp"
    MDSpinner:
        size_hint: None, None
        size: dp(36), dp(36)
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
    MDLabel:
        text: "Setting up..."
        font_style: "H3"
        halign: "center"
        theme_text_color: "Custom"
        text_color: "green"
        pos_hint: {'center_x': 0.5, 'center_y':0.4}
<HomeScreen>
    name: 'HomeScreen'
    MDBottomAppBar:
        MDTopAppBar:
            icon: "camera"
            mode: "center"
            icon_color: 0, 1, 0, 1
            left_action_items: [["menu", lambda x: root.showPopup()], ["school", lambda x: root.switchToKBHome()]]
            right_action_items: [["cog", lambda x: root.switchToSettings()], ["message", lambda x: root.switchToProfile()]]
            mode: "center"
            type: "bottom"
            on_action_button: root.on_enter_camera(self.icon)
    MDCard
        size_hint: None, None
        size: "280dp", "180dp"
        pos_hint: {'center_x': .5, 'center_y':.5}
        padding: [10, 5]
        on_press: root.goToWeather()
        MDLabel:
            text: "{}".format(root.temp)
            font_style: "H3"
        MDLabel:
            text: "{}".format(root.userLocation)
            font_style: "H5"
<ProfileScreen>
    name: "ProfileScreen"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title:"User Profile"
            text_color: "white"
            md_text_color: app.theme_cls.primary_light
            elavation: 10
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
    BoxLayout:
        pos_hint: {'center_x': .5, 'center_y':.4}
        GridLayout
            cols: 1
            padding: [3, 1]
            TwoLineListItem:
                text: "User name"
                secondary_text: "{}".format(root.user_name)
            TwoLineListItem:
                text: "District"
                secondary_text: "{}".format(root.user_district)
            TwoLineListItem:
                text: "Phone Number"
                secondary_text: "{}".format(root.pNumber)
    MDFloatingActionButton:
        icon: "pencil"
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {'center_x': 0.9, 'center_y':0.2}
<KBHomeScreen>
    name: "KBHomeScreen"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title:"{}".format(root.lang_manager.getPrompt("tomato_diseases"))
            text_color: "white"
            md_text_color: app.theme_cls.primary_light
            elavation: 10
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
            right_action_items: [["magnify", lambda x: root.launch_search()]]
    ScrollView:
        pos_hint: {'center_x': .5, 'center_y':.4}
        MDList:
            id: container
<DiseaseScreen>
    name: "DiseaseScreen"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title:"{}".format(root.diseaseName)
            elavation: 10
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
            right_action_items: [["image", lambda x: root.switchToImage()]]
            pos_hint: {'top':1.0}
        ScrollView:
            MDBoxLayout:
                size_hint: 1, None
                adaptive_height: True
                height: 500
                orientation: 'vertical'   
                padding: 2 
                MDLabel:
                    text: "{}".format(root.lang_manager.getPrompt('disease_description'))
                    font_style: "H4"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_color: get_color_from_hex('#ef1234')
                    margin: 50
                MDLabel:
                    text: "{}".format(root.diseaseDesc)
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: [2, 1]
                    halign: 'justify'
                MDLabel:
                    text: "{}".format(root.lang_manager.getPrompt('disease_symptoms'))
                    font_style: "H4"
                    size_hint_y: None
                    height: self.texture_size[1]
                MDList:
                    id: symptoms_list
                MDLabel:
                    text: "{}".format(root.lang_manager.getPrompt('disease_controls'))
                    font_style: "H4"
                    size_hint_y: None
                    height: self.texture_size[1]
                MDList:
                    id: controls_list
                MDLabel:
                    text: "{}".format(root.lang_manager.getPrompt('disease_chemicals'))
                    font_style: "H4"
                    size_hint_y: None
                    height: self.texture_size[1]
                MDList:
                    id: chemicals_list
<DiseaseImageScreen>
    name: "DiseaseImageScreen"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            elavation: 10
            right_action_items: [["close", lambda x: root.on_back()]]
            pos_hint: {'top':1.0}
        GridLayout:
            cols: 1
            AsyncImage:
                source: "{}".format(root.imageSource)
            MDLabel:
                text: "An image of the {} disease infected tomato plant".format(root.caption)
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'center'
<Content>
    GridLayout:
        cols: 1
        height:"400dp"
        MDLabel:
            text: "{}".format(root.lang_manager.getPrompt('search_symptoms'))       
        MDTextField:
            icon_left: "magnify"
            id: symptoms
            text_hint: "{}".format(root.lang_manager.getPrompt('search_symptoms_hint'))   

<CameraScreen>
    name: "CameraScreen"
    MDRelativeLayout:
        orientation: "vertical"
        Camera:
            id: camera
            resolution: (1920, 1080)
            play: False
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
        Label:
            text: root.normalized_result
    MDBottomAppBar:
        MDTopAppBar:
            icon: "camera"
            mode: "center"
            icon_color: 0, 1, 0, 1
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
            right_action_items: [["file", lambda x: x]]
            mode: "center"
            type: "bottom"
            on_action_button: root.on_camera_texture(self.icon)
<DiagnosisResults>
    name:"DiagnosisResults"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title:"{}".format(root.lang_manager.getPrompt('diagnosis_result'))
            text_color: "white"
            md_text_color: app.theme_cls.primary_light
            elavation: 10
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
    BoxLayout:
        pos_hint: {'center_x': .5, 'center_y':.4}
        GridLayout
            cols: 1
            padding: [3, 1]
            TwoLineListItem:
                text: "{}".format(root.lang_manager.getPrompt('condition_detected'))
                secondary_text: "{}".format(root.detected_label)
            TwoLineListItem:
                text: "{}".format(root.lang_manager.getPrompt('result_confidence'))
                secondary_text: "@ {}%".format(root.detected_conf_)
    MDRaisedButton:
        text: "{}".format(root.lang_manager.getPrompt('view_advice'))
        margin: "40"
        padding: 2
        markup: True
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        width: 200
        on_press: root.view_disease()
<AddSMSClient>
    name: "AddSMSClient"
    client_name: client_name
    client_phone: client_phone
    GridLayout:
        cols: 1
        MDTopAppBar:
            title:"Add SMS Client"
            text_color: "white"
            md_text_color: app.theme_cls.primary_light
            elavation: 10
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
        MDTextField:
            id: client_name
            hint_text: "Client Name"
        MDTextField:
            id: client_phone
            hint_text: "Client Phone Number"
        MDRaisedButton:
            text: "Add Client"
            margin: "40"
            padding: 2
            markup: True
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            width: 200
            on_press: root.add_sms_client()
<SettingsScreen>
    name: "SettingsScreen"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title:"Settings"
            elavation: 10
            pos_hint: {'top':1.0}
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
        BoxLayout:
            pos_hint: {'center_x': .5, 'center_y':.4}
            GridLayout
                cols: 1
                padding: [3, 1]
                OneLineListItem:
                    text: "{}".format(root.lang_manager.getPrompt('language'))        
                    on_press: root.switchToLanguageSettings()
<LanguageSettings>
    name: "LanguageSettings"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "{}".format(root.lang_manager.getPrompt('language'))    
            elavation: 10
            pos_hint: {'top':1.0}
            left_action_items: [["arrow-left", lambda x: root.on_back()]]
        BoxLayout:
            pos_hint: {'center_x': .5, 'center_y':.4}
            GridLayout
                cols: 1
                padding: [3, 1]
                OneLineListItem:
                    text: "Chichewa"   
                    on_press: root.lang_manager.switchLanguage('ch')
                OneLineListItem:
                    text: "English"
                    on_press: root.lang_manager.switchLanguage('eng') 
<WeatherScreen>
    name: "WeatherScreen"
    MDLabel:
        text: "Nyengo"